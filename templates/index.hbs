    <body>
      <header class="site-width header">
        <a href="/"><img class="header__logo" src="/img/sbc.logo.png" alt="Safe Bathrooms Club"></a>
        <ul class="header__nav">
          <li><a href="/about.html">About</a></li>
          <li><a href="http://goo.gl/forms/tbFz3MJhwX">Submit a bathroom</a></li>
          <li><a href="/contact.html">Contact</a></li>
        </ul>
      </header>

      <section class="site-width">
        <h1 class="hero-h1">Businesses with safe bathrooms for everyone. <a href="http://goo.gl/forms/tbFz3MJhwX">Add to the map.</a></h1>

      </section>  

      <section class="map site-width">
        <iframe src="https://www.google.com/maps/d/embed?mid=zL2fEel0lp_I.kkesJKJtTr1Q"></iframe>
      </section>

      {{#each cities}}
        <section class="site-width">
          <h2 id="#{{city}}" class="city-name">{{city}}</h2>
          <ul class="br-list">
            {{#each bathrooms}}
              <li class="br">
                <p class="br-category">{{category}}</p>
                <h4 class="br-name">{{name}}</h4>
                <a href="https://www.google.com/maps/search/@{{c1}},{{c0}},12z?q={{name}}"><address class="address">
                  {{address}} {{zip}}
                </address></a>
                <ul class="br-links">
                  {{#if link}}
                    <li><a href="{{link}}"><img class="icon" src="img/{{icon}}"></a></li>
                  {{/if}}
                </ul>
              </li>
            {{/each}}
          </ul>
        </section>
        <hr class="hr">
      {{/each}}
      <footer class="footer">
        <ul class="footer__nav">
          <li>
            <a href="/">
              <img class="logo-mark" src="img/favicon-96x96.png" alt="Safe Bathrooms Club">
            </a>
